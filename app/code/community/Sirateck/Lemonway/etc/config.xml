<config>
    <modules>
        <Sirateck_Lemonway>
            <version>0.1.0</version>
        </Sirateck_Lemonway>
    </modules>
    <global>
        <resources>
            <sirateck_lemonway_setup>
                <setup>
                    <module>Sirateck_Lemonway</module>
                    <class>Sirateck_Lemonway_Model_Resource_Setup</class>
                </setup>
            </sirateck_lemonway_setup>
        </resources>
        <blocks>
            <sirateck_lemonway>
                <class>Sirateck_Lemonway_Block</class>
            </sirateck_lemonway>
        </blocks>
        <helpers>
            <sirateck_lemonway>
                <class>Sirateck_Lemonway_Helper</class>
            </sirateck_lemonway>
        </helpers>
        <models>
            <sirateck_lemonway>
                <class>Sirateck_Lemonway_Model</class>
                <resourceModel>sirateck_lemonway_resource</resourceModel>
            </sirateck_lemonway>
            <sirateck_lemonway_resource>
                <class>Sirateck_Lemonway_Model_Resource</class>
                <entities>
                    <wallet>
                        <table>sirateck_lemonway_wallet</table>
                    </wallet>
                </entities>
            </sirateck_lemonway_resource>
        </models>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <sirateck_lemonway>
                    <file>sirateck_lemonway.xml</file>
                </sirateck_lemonway>
            </updates>
        </layout>
        <translate>
            <modules>
                <Sirateck_Lemonway>
                    <files>
                        <default>Sirateck_Lemonway.csv</default>
                    </files>
                </Sirateck_Lemonway>
            </modules>
        </translate>
        <global_search>
            <wallet>
                <class>sirateck_lemonway/adminhtml_search_wallet</class>
                <acl>sirateck_lemonway</acl>
            </wallet>
        </global_search>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Sirateck_Lemonway before="Mage_Adminhtml">Sirateck_Lemonway_Adminhtml</Sirateck_Lemonway>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
		<sirateck_lemonway>
			<lemonway_api>			
				<api_pass backend_model="adminhtml/system_config_backend_encrypted"/>
				<api_pass_test backend_model="adminhtml/system_config_backend_encrypted"/>
				<directkit_uri>https://ws.lemonway.fr/mb/sirateck/dev/directkit/service.asmx</directkit_uri>
				<directkit_json_uri>https://ws.lemonway.fr/mb/sirateck/dev/directkitjson/service.asmx</directkit_json_uri>
				<webkit_uri>https://m.lemonway.fr/mb/sirateck/dev/</webkit_uri>
			</lemonway_api>
		</sirateck_lemonway>
		<payment>
			<lemonway_webkit>
				<active>0</active>
				<title>Lemonway payment</title>
				<payment_action>initialize</payment_action>
				<allowredirect>1</allowredirect>
				<redirectspecific>0</redirectspecific>
				<allowspecific>0</allowspecific>
				<is_test_mode>0</is_test_mode>
				<debug>0</debug>
				<model>sirateck_lemonway/method_webkit</model>		
			</lemonway_webkit>
		</payment>
	</default>
</config>
